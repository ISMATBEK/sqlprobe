import requests

# Oddiy payloadlar
payloads = ["'", "' OR '1'='1", "\" OR \"1\"=\"1", "' OR 1=1--", "';--", "\";--"]

def scan_sql_injection(url):
    print(f"ğŸ” Scanning URL: {url}")
    vulnerable = False

    for payload in payloads:
        test_url = url + payload
        try:
            res = requests.get(test_url, timeout=5)
            if "sql" in res.text.lower() or "syntax" in res.text.lower() or "mysql" in res.text.lower():
                print(f"âš ï¸ Possible vulnerability found with payload: {payload}")
                vulnerable = True
        except requests.exceptions.RequestException as e:
            print(f"âš ï¸ Error during request: {e}")
    
    if not vulnerable:
        print("âœ… No obvious SQL injection patterns found.")

if __name__ == "__main__":
    print("ğŸ›¡ï¸ sqlprobe â€” Basic SQL Injection Scanner")
    target = input("ğŸŒ Enter target URL (e.g., http://example.com/page.php?id=): ")
    scan_sql_injection(target)


